user nginx nginx;
worker_processes <%= node[:cpu][:total] %>;
error_log /var/log/nginx/error.log info;
worker_rlimit_nofile 20480;

events {
    worker_connections 10240; # should be increased for busy servers
    use epoll;
}

http {
    include mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    server_name_in_redirect       off;
    server_names_hash_max_size    10240;
    server_names_hash_bucket_size 1024;
    server_tokens off;
    index index.php index.html index.htm;
    # disable_symlinks if_not_owner;

    sendfile          on;
    tcp_nopush        on;
    tcp_nodelay       on;
    keepalive_timeout 5;

    open_file_cache max=1000 inactive=20s;
    open_file_cache_valid 30s;
    open_file_cache_min_uses 2;
    open_file_cache_errors on;

    gzip              on;
    gzip_vary         on;
    gzip_static       on;
    gzip_disable      "MSIE [1-6]\.";
    gzip_proxied      any;
    gzip_http_version 1.0;
    gzip_min_length   1000;
    gzip_comp_level   6;
    gzip_buffers      16 8k;
    gzip_types text/plain text/xml text/css application/x-javascript application/xml application/javascript application/xml+rss text/javascript application/atom+xml image/png image/x-icon image/gif image/jpeg;

    send_timeout                30s;
    output_buffers              4 32k;
    postpone_output             1460;
    request_pool_size           32k;
    client_body_timeout         30s;
    connection_pool_size        256;
    client_max_body_size        200M;
    client_header_timeout       30s;
    ignore_invalid_headers      on;
    client_body_buffer_size     128k;
    client_body_in_file_only    off;
    reset_timedout_connection   on;
    client_header_buffer_size   256k;
    large_client_header_buffers 4 256k;

    fastcgi_buffers              4 256k;
    fastcgi_buffer_size          128k;
    fastcgi_intercept_errors     on;
    fastcgi_busy_buffers_size    256k;
    fastcgi_temp_file_write_size 256k;

    proxy_buffers              4 256k;
    proxy_buffering            off;
    proxy_buffer_size          256k;
    proxy_send_timeout         600;
    proxy_read_timeout         600;
    proxy_connect_timeout      59s;
    proxy_busy_buffers_size    256k;
    proxy_temp_file_write_size 256k;

    proxy_set_header X-Real-IP          $remote_addr;
    proxy_set_header X-Forwarded-Host   $host;
    proxy_set_header X-Forwarded-Server $host;
    proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;

    # status
    server {
        server_name 127.0.0.1;
        listen 127.0.0.1:80;
        location /nginx_status {
            stub_status on;
            access_log off;
            allow 127.0.0.1;
            deny all;
        }

        location ~ ^/php_(status|ping)$ {
            access_log off;
            allow 127.0.0.1;
            deny all;
            include /etc/nginx/fastcgi_params;
            fastcgi_param SCRIPT_FILENAME $fastcgi_script_name;
            fastcgi_pass 127.0.0.1:9000;
        }
    }

    include "/etc/nginx/conf.d/*.conf";
}
